<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>


<%if @beer_club.memberships.empty?%>
    <p>No members yet!</p>

<%else%>

<p><%= @beer_club.memberships.count %> members: </p>
<p><ul>
  <% @beer_club.memberships.each do |membership| %>
     <li> <%= link_to membership.user.username, membership.user %></li>
  <% end %>
</ul></p>
<%end%>

<%= link_to('Edit', edit_beer_club_path(@beer_club)) if current_user %>
<%= link_to('Destroy club', beer_club_path(@beer_club), method: :delete, data: {confirm: 'Are you sure?'}) if current_user %><p>
<%= link_to 'Back', beer_clubs_path %></p>
