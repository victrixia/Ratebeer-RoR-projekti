<p id="notice"><%= notice %></p>

<h1>Listing Styles</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @styles.each do |style| %>
      <tr>
        <td><%= style.name %></td>
        <td><%= link_to 'Show', style, class: 'btn btn-info' %></td>
        <% if current_user %>
            <td><%= link_to 'Edit', edit_style_path(style), class:'btn btn-success' %></td>
            <td><%= link_to 'Destroy', style, method: :delete, data: {confirm: 'Are you sure?'}, class:'btn btn-danger' %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Style', new_style_path %>
